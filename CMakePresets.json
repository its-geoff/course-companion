{
    "version": 3,
    "configurePresets": [
        {
            "name": "main",
            "displayName": "Main Program",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/build_main",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "/usr/bin/clang",
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/build/build_main/conan_toolchain.cmake",
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_TESTING": "OFF"
            }
        },
        {
            "name": "test",
            "displayName": "Tests",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/build_test",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "/usr/bin/clang",
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/build/build_test/conan_toolchain.cmake",
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_TESTING": "ON",
                "ENABLE_COVERAGE": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "main",
            "configurePreset": "main"
        },
        {
            "name": "test",
            "configurePreset": "test"
        }
    ],
    "testPresets": [
        {
            "name": "test",
            "configurePreset": "test"
        }
    ]
}
