#!/bin/bash
set -euo pipefail

OUTPUT_DIR="${OUTPUT_DIR:-"$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)/tests/output_logs"}"
mkdir -p "$OUTPUT_DIR"

TIMESTAMP=$(date +"%Y-%m-%d_%H-%M-%S")

shopt -s nullglob
for file in Testing/Temporary/LastTest_*.log; do
    base="LastTest"
    cp "$file" "$OUTPUT_DIR/${base}_${TIMESTAMP}.log"
done
shopt -u nullglob